package Utilities;

import java.io.File;
import java.io.FileInputStream;
import java.util.Properties;

public class ReadConfig {

	Properties prop;

	public ReadConfig() {
		File src = new File("./ConfigurationFiles/config.properties");
		try {
			FileInputStream fis = new FileInputStream(src);
			prop = new Properties();
			prop.load(fis);
		} catch (Exception e) {
			System.out.println("Exception is: " + e);
		}
	}
	public String getBrowser(){
		 String url=prop.getProperty("browser");
		 return url;
	 }
	public String getChromeDriver(){
		 String driverPath=prop.getProperty("ChromeDriver");
		 return driverPath;
	 }
	public String getFirefoxDriver(){
		 String driverPath=prop.getProperty("FirefoxDriver");
		 return driverPath;
	 }
	public String getIEDriver(){
		 String driverPath=prop.getProperty("IE");
		 return driverPath;
	 }

}
